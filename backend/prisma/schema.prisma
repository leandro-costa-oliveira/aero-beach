generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = "file:./aerobeach.db"
}

model Contador {
  id       Int @id @default(autoincrement())
  contador Int
}

model Torneios {
  id                    String            @id @default(uuid())
  nome                  String?
  dataInicio            DateTime
  dataRealizacao        DateTime?
  dataLimiteInscricao   DateTime
  valorInscricao        Float
  tipo                  TipoTorneio
  categoria             CategoriaTorneio
  modalidade            ModalidadeTorneio
  federado              Boolean           @default(false)

  inscricoes Inscricoes[]
}

enum TipoTorneio {
  masculino
  feminino
  misto
}

enum CategoriaTorneio {
  iniciante
  d
  c
  b
  a
  open
}

enum ModalidadeTorneio {
  duplas
  simples
}

model Usuarios {
  id       String   @id @default(uuid())
  nome     String
  email    String   @unique
  telefone String
  role     String   @default("")
  senha    String?
}

model Jogadores {
  id       String @id @default(uuid())
  nome     String
  cpf      String
  telefone String
  email    String

  inscricoes Inscricoes[]
  duplas1    duplas[]     @relation("duplaParticipante1")
  duplas2    duplas[]     @relation("duplaParticipante2")
}

model Inscricoes {
  id            String   @id @default(uuid())
  torneioId     String
  jogadorId     String
  pago          Boolean  @default(false)
  dataPagamento DateTime

  torneio Torneios  @relation(fields: [torneioId], references: [id])
  jogador Jogadores @relation(fields: [jogadorId], references: [id])
}

model duplas {
  id            String @id @default(uuid())
  participante1 String
  participante2 String

  jogador1 Jogadores @relation("duplaParticipante1", fields: [participante1], references: [id])
  jogador2 Jogadores @relation("duplaParticipante2", fields: [participante2], references: [id])

  @@unique([participante1, participante2])
}
